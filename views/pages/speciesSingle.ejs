<%- include('../partials/header') %>

<main class="main" id="speciesSingle">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% data.forEach(hero => { %>
                <div class="col">
                    <div class="card h-100">
                        <img src="https://placehold.co/300x180" alt="placeholder img" class="img-fluid image hero-card-img card-img-top" />
                        <div class="card-body">
                            <h2 class="card-title card-hero-name">
                                <% if (hero.hero_name == null) { %>
                                    <%= hero.first_name %> <%= hero.last_name %>
                                <%} else { %>
                                    <%= hero.hero_name %>
                                <% } %>
                            </h2>
                        </div>
                        <div class="card-footer">
                            <a href="/heroes/<%= hero.hero_id %>" class="card-link">view more</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>